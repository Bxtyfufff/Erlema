<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="170dp" >

        <com.erlema.bean.MyViewFlipper
            android:id="@+id/viewFlipper1"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:autoStart="true"
            android:flipInterval="6000"
            android:inAnimation="@anim/push_right_in"
            android:outAnimation="@anim/push_left_out" >

            <ImageView
                android:id="@+id/img0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </com.erlema.bean.MyViewFlipper>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="vertical" >

            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right" >

                <ImageView
                    android:id="@+id/index1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/index2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/yuandian" />

                <ImageView
                    android:id="@+id/index3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/yuandian" />

                <ImageView
                    android:id="@+id/index4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/yuandian" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>